<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ProfilPage"
             >
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">


        <Frame 
                CornerRadius="20" 
                Padding="0" 
                HasShadow="True" 
                BackgroundColor="Transparent"
                BorderColor="Transparent">

            <Image
                    x:Name="imageProfil" 
                    HeightRequest="185"
                       />
        </Frame>
        
        <Label
      x:Name="NameLabel"
      Style="{StaticResource Headline}"
       />
        <Label
      x:Name="EmailLabel"
      Style="{StaticResource SubHeadline}"
       />

        <Button
            x:Name="postulate"
            Text="Postuler"
            Clicked="postulate_Clicked"
            BackgroundColor="#FF0000"
            TextColor="White"
            CornerRadius="20"
            HeightRequest="50"
            WidthRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>